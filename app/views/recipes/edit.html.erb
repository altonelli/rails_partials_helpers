<h1>Edit Recipe</h1>
<hr>

<%= form_for(@recipe, :html => {:class => 'form'}, :method => :put) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions, rows: 15, cols: 100 %>
  </div>
  <div class="actions">
    <%= f.submit "Save Recipe" %>
  </div>

<% end %>
